<!DOCTYPE html>
<html>
  <head>
    <title>Chicago Favorites</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'favicon.ico' %>
  </head>


  <script type="text/javascript">
  $(document).ready(function(){
    setTimeout(function(){
      $('#flash').remove();
    }, 4000);
   })
  </script>

  <body class="page star-bg">
    <nav class="navbar navbar-default navbar-fixed-top" id="grad1">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Chicago Favorites</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          
          <ul class="nav navbar-nav navbar-left">
            <li><a href="/">Menu</a></li>
            <li><a href="/menu_items/new">New Item</a></li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "<span class='glyphicon glyphicon-shopping-cart'></span> Cart (#{@cart_count})".html_safe, "/carted_items", method: :get %></li>

            <li class="dropdown">
              <li><a href class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true"><span class="glyphicon glyphicon-menu-hamburger"></span></a>
              <ul class="dropdown-menu see-thru">
                  <li><a href="/">View Menu</a></li>
                  <li><a href="/carted_items">View Cart</a></li>
                  <li><a href="/menu_items/new">Create New Item</a></li>
              </ul>
            </li>
          </ul>

        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
  

    <div class="container">
      <% flash.each do |name, message| %>
        <div id="flash" class="alert alert-<%=name%> alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <strong><%= name.upcase %></strong> <%=message%>
       </div>
      <%end%>
    </div>

    <%= yield %>
    <div class="space"></div>
  </body>
</html>
