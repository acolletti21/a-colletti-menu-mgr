<div class="container">
  <div class="col-md-8 col-sm-offset-2 show-well">
      <% @menu_item.errors.full_messages.each do |error| %> 
        <h2><%= error%></h2>
      <%end%>

      <h1 style="text-align: center">Add a new item to the menu</h1>
    </div>

    <div class="col-sm-8 col-sm-offset-2 show-well category-bg">
      <%= form_for @menu_item do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div cfass="form-group">
          <%= f.label :price %>
          <%= f.text_field :price, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :description  %>
          <%= f.text_area :description, size: "25x4", class: "form-control" %>
        </div>

        <%= f.fields_for :menu_item_category do |f| %>
        <div class="form-group">
          <%= f.collection_select :category_id, Category.all, :id, :name %>
          <%= hidden_field_tag :menu_item_id, @menu_item.id %>
          <%= f.label :category %>
        </div>
      <% end %>
        <br>
        <input type="submit" value="Add Item" class="btn btn-default see-thru">
      <% end %>
     </div>   
    </div>
  </div>
</div>