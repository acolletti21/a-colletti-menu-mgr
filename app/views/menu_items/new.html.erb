<div class="col-md-8 col-sm-offset-2">
  <div class="post-image" style="box-shadow:1px 5px 8px #a88888; padding: 25px; background-color: #fff; opacity: 0.85"> 
    <% @menu_item.errors.full_messages.each do |error| %> 
      <h2><%= error%></h2>
    <%end%>

    <h2>Add a new item to the menu</h2>

    <%= form_tag "/menu_items", method: :post do%>
    <div class="form-group">
      <%= label_tag :name %>
      <%= text_field_tag :name, @menu_item.name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :category %>
      <%= text_field_tag :category, @menu_item.category, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :price %>
      <%= text_field_tag :price, @menu_item.price, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :description  %>
      <%= text_area_tag :description, @menu_item.description, size: "25x4", class: "form-control" %>
    </div>

    <br>
    <input type="submit" value="Add Item">
    <% end %>
  </div>
</div>