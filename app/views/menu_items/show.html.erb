<div class="container">
  <div class="col-md-8 col-sm-offset-2" style="margin-top: 10%">
      <a style="float: right; font-size: 1.5em" href=<%= '/' %>><span class="glyphicon glyphicon-arrow-left"></span> Back To Menu</a>
      <br><br><br>
    <h2 style="display: inline; color:white"><%= @menu_item.name %></h2>
    <h3 style="float: right"><%= number_to_currency(@menu_item.price) %></h3><br>
    <p style="font-size: 1.4em"><i><%= @menu_item.menu_item_category.category.name %></i></p>
    <p class="description"><%= @menu_item.description %></p>

    <div class="col-sm-8">  
      <%= form_tag "/carted_items", method: :post do%>
        <span>
          <%= label_tag :quantity %>
          <%= text_field_tag :quantity, "", size: "4", type: "number" %>
          <%= hidden_field_tag :menu_item_id, @menu_item.id %>
        </span>
        <span><%= submit_tag "Add to Cart", class: "btn btn-default" %></span>
      <%end%>
    </div>

    <div class="col-sm-2">
      <span>
        <a class="btn btn-info" href="/menu_items/<%= @menu_item.id %>/edit">Edit Item Info</a>
      </span>
    </div>
    <div class="col-sm-2">
      <%= form_tag "/menu_items/#{@menu_item.id}", method: :delete do %>
        <input class="btn btn-danger" type="submit" value="Delete Item">
      <% end %>
    </div>
  </div>
</div>
